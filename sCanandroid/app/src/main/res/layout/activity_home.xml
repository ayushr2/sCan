<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prussianBlue"
    android:orientation="vertical"
    tools:context="com.example.scan.scan.HomePage">

    <TextView
        android:id="@+id/showuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_margin="10dp">
    </TextView>

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/scanbutton"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/vividCerulean"
            android:textColor="@color/white"
            android:text="Scan new from Camera"
            android:gravity="center_horizontal|bottom"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="false"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:drawableTop="@drawable/sc"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/photolibrarybutton"
            android:drawableTop="@drawable/pl"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/vividCerulean"
            android:textColor="@color/white"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:text="Get new from Photo Library"
            android:gravity="center_horizontal|bottom"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/doclibrarybutton"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="3dp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/doclib"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/vividCerulean"
            android:text="View all Documents"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
</LinearLayout>